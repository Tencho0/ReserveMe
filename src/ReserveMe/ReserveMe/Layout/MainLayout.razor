@using Shared.Dtos.Users
@using Shared.Helpers
@using Shared.Services.Users

    [Inject] private IAuthenticationHelper? _authHelper { get; set; }

[Inject] private AuthenticationStateProvider AuthenticationStateProvider { get; set; }

[Inject] private NavigationManager? navManager { get; set; }

[Inject] private IUserService _userService { get; set; }

public UserDto UserDetails { get; set; }

protected override async Task OnInitializedAsync()
{
    await GetLoggedUserInfo();
}

private async Task GetLoggedUserInfo()
{
    var authState = await this.AuthenticationStateProvider.GetAuthenticationStateAsync();
    var user = authState.User;
    if (user.Identity.IsAuthenticated)
    {
        var userId = user.Claims.FirstOrDefault(c => c.Type == "sub")?.Value;
        UserDetails = await _userService.GetByIdAsync(userId);

        StateHasChanged();
    }
}

private async Task Logout()
{
    await _authHelper.LogoutAsync();
    navManager.NavigateTo("/login", forceLoad: true);
}

private string GetImageSrc(byte[]? imageBytes)
{
    if (imageBytes == null || imageBytes.Length == 0)
        return $"/assets/images/emptyImg.jpg";

    string imageBase64 = Convert.ToBase64String(imageBytes);
    return $"data:image/png;base64,{imageBase64}";
}
}


