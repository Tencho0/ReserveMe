@page "/venue/{VenueId:int}"
@namespace ReserveMe.Pages.Venues

<PageTitle>Venue Details</PageTitle>

@if (venue != null)
{
    <div class="venue-page">
        <section class="venue-hero">
            <div class="hero-inner">
                <div class="hero-left">
                    @if (!string.IsNullOrWhiteSpace(venue.LogoUrl))
                    {
                        <img src="@venue.LogoUrl" alt="Venue Logo" class="venue-logo" />
                    }
                    else
                    {
                        <img src="@($"../assets/images/emptyImg.jpg")" alt="Venue Logo" class="venue-logo" />
                    }

                    <div class="venue-title-block">
                        <h1 class="venue-name">@venue.Name</h1>
                        <div class="venue-meta">
                            @if (venue.VenueType is not null)
                            {
                                <span class="badge">@venue.VenueType.Name</span>
                                <span class="dot"></span>
                            }
                            <span class="meta-text">
                                @if (venue.Rating is not null)
                                {
                                    @($"{venue.Rating:0.0} ")
                                    <span class="meta-star" aria-label="Average rating star">★</span>
                                }
                                (@($"{venue.ReviewCount} reviews"))
                                <span class="dot"></span>
                                @($"{venue.TotalReservations} total reservations")
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="hero-cover">
                @if (!string.IsNullOrWhiteSpace(venue.ImageUrl))
                {
                    <img src="@venue.ImageUrl" alt="Venue Image" class="cover-img" />
                }
                else
                {
                    <img src="@($"../assets/images/emptyImg.jpg")" alt="Venue Image" class="cover-img" />
                }
            </div>
        </section>

        <main class="content-grid">
            <section class="left-col">
                <article class="card">
                    <h3 class="card-title">Description</h3>
                    <p class="card-text">
                        @if (!string.IsNullOrWhiteSpace(venue.Description))
                        {
                            @venue.Description
                        }
                        else
                        {
                            <span class="muted">No description available.</span>
                        }
                    </p>
                </article>

                <article class="card">
                    <h3 class="card-title">Address</h3>
                    <div class="kv-row">
                        <div class="kv">
                            <span class="k">
                                <svg class="ico" viewBox="0 0 24 24" aria-hidden="true">
                                    <path d="M12 2a7 7 0 0 0-7 7c0 5.25 7 13 7 13s7-7.75 7-13a7 7 0 0 0-7-7Zm0 9.5A2.5 2.5 0 1 1 12 6a2.5 2.5 0 0 1 0 5Z"></path>
                                </svg>
                                Coordinates
                            </span>
                            <span class="v">
                                @($"{venue.Latitude:0.000000}, {venue.Longitude:0.000000}")
                            </span>
                        </div>
                        <div class="kv">
                            @* //TODO *@
                            <span class="k">Address</span>
                            <span class="v muted">(Address not provided — use coordinates)</span>
                        </div>
                    </div>
                    @* //TODO: MAP INTEGRATION *@
                    @* <div class="map-container">
                        <div id="map-@venue.Id" class="gm-map" title="Venue location"></div>
                    </div> *@

                </article>

                @if (recentReviews?.Count > 0)
                {
                    <div class="card">
                        <h3 class="card-title">Latest Reviews</h3>

                        <ul class="review-list">
                            @foreach (var r in recentReviews)
                            {
                                <li class="review-item">
                                    <div class="review-header">
                                        <span class="review-stars" aria-label="Rating">
                                            @RenderStars(r.Rating ?? 0)
                                        </span>

                                        <span class="review-date">
                                            @r.CreatedAt.ToLocalTime().ToString("dd MMM yyyy HH:mm")
                                        </span>
                                    </div>

                                    <div class="review-comment">
                                        @r.Comment
                                    </div>

                                    <div class="review-author">
                                        @(!string.IsNullOrWhiteSpace(r.ReviewerName) ? r.ReviewerName : "Anonymous")
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                }

                @*   <article class="card">
                    <h3 class="card-title">Contacts</h3>
                    <div class="kv-row">
                        <div class="kv">
                            <span class="k">Email</span>
                            <span class="v muted">Not available</span>
                        </div>
                        <div class="kv">
                            <span class="k">Phone</span>
                            <span class="v muted">Not available</span>
                        </div>
                    </div>
                </article> *@
            </section>

            <section class="right-col">
                @* //TODO: Get all available tables for selected date *@
                @*     <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Available Tables</h3>
                    </div>
                    <div class="filter-grid">
                        <div class="field">
                            <label class="label">Date & Time</label>
                            <input type="datetime-local" class="input" />
                        </div>
                        <div class="field">
                            <label class="label">Number of People</label>
                            <input type="number" min="1" class="input" />
                        </div>
                        <div class="field action">
                            <button class="btn btn-primary w-100">Search</button>
                        </div>
                    </div>

                    <div class="divider"></div>

                    <ul class="table-list">
                        <li class="table-item">
                            <span class="table-name">Table 1</span>
                            <button class="btn btn-soft">Reserve</button>
                        </li>
                        <li class="table-item">
                            <span class="table-name">Table 2</span>
                            <button class="btn btn-soft">Reserve</button>
                        </li>
                        <li class="table-item">
                            <span class="table-name">Table 3</span>
                            <button class="btn btn-soft">Reserve</button>
                        </li>
                    </ul>

                    <button class="btn btn-success w-100 mt-8">Make a Reservation</button>
                </div> *@

                <a href="/makeReservation/@VenueId" class="btn btn-success">Make a Reservation</a>

                @if (UserId != null)
                {
                    <div class="card">
                        <h3 class="card-title">Leave a Review</h3>

                        <EditForm EditContext="@reviewEditContext" OnValidSubmit="@SubmitReviewAsync">
                            <DataAnnotationsValidator />
                            <ValidationSummary />

                            <div class="field">
                                <label class="label">Rating</label>
                                <div class="stars">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        var starValue = i;
                                        var active = starValue <= reviewDto.Rating ? "star active" : "star";

                                        <button type="button"
                                                class="@active"
                                                @onclick="@(() => SetRating(starValue))"
                                                aria-label="Rate @starValue">
                                            ★
                                        </button>
                                    }
                                </div>
                            </div>

                            <div class="field">
                                <label class="label">Your Review</label>
                                <InputTextArea class="input textarea" @bind-Value="reviewDto.Comment" placeholder="Write your opinion..." />
                            </div>

                            <button class="btn btn-secondary w-100" type="submit" disabled="@submitting">
                                @(submitting ? "Submitting..." : "Submit")
                            </button>

                            @if (!string.IsNullOrEmpty(submitSuccess))
                            {
                                <div class="alert success">@submitSuccess</div>
                            }
                            @if (!string.IsNullOrEmpty(submitError))
                            {
                                <div class="alert error">@submitError</div>
                            }
                        </EditForm>
                    </div>
                }
            </section>
        </main>
    </div>
}

<style>
    :root {
        --bg: #ffffff;
        --surface: #f8f9fb;
        --card: #ffffff;
        --border: #e6e7eb;
        --text: #1f2328;
        --muted: #6b7280;
        --primary: #3b82f6;
        --primary-700: #2563eb;
        --success: #22c55e;
        --secondary: #7c3aed;
        --shadow: 0 8px 24px rgba(0,0,0,0.08);
        --radius-lg: 16px;
        --radius-md: 12px;
        --radius-sm: 8px;
        --gap: 16px;
        --font: "Inter", system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
        --star-gold: #f59e0b;
        --star-gold-border: #fcd34d;
    }

    .meta-star {
        color: var(--star-gold);
        font-weight: 700;
        vertical-align: baseline;
    }

    .venue-page {
        font-family: var(--font);
        color: var(--text);
        background: var(--bg);
        max-width: 1100px;
        margin: 24px auto;
        padding: 0 16px 32px;
    }

    .venue-hero {
        background: linear-gradient(135deg, rgba(59,130,246,0.10), rgba(124,58,237,0.10));
        border: 1px solid var(--border);
        border-radius: var(--radius-lg);
        padding: 16px;
        box-shadow: var(--shadow);
    }

    .hero-inner {
        display: flex;
        align-items: center;
        gap: 14px;
        padding: 6px 6px 12px 6px;
    }

    .hero-left {
        display: flex;
        align-items: center;
        gap: 14px;
        min-height: 64px;
    }

    .venue-logo {
        width: 64px;
        height: 64px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #fff;
        box-shadow: 0 6px 18px rgba(0,0,0,0.12);
        background: #fff;
    }

    .venue-title-block {
        display: flex;
        flex-direction: column;
        gap: 6px;
    }

    .venue-name {
        margin: 0;
        font-size: 28px;
        line-height: 1.2;
        letter-spacing: 0.2px;
    }

    .venue-meta {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        color: var(--muted);
        font-size: 14px;
    }

    .badge {
        background: #e8f3ff;
        color: var(--primary-700);
        padding: 4px 10px;
        border-radius: 999px;
        font-weight: 600;
        font-size: 12px;
        border: 1px solid #cfe4ff;
    }

    .dot {
        width: 6px;
        height: 6px;
        background: #cfd3da;
        border-radius: 50%;
        display: inline-block;
    }

    .hero-cover {
        margin-top: 10px;
        border-radius: var(--radius-md);
        overflow: hidden;
        background: #eef2f7;
        border: 1px solid var(--border);
        box-shadow: var(--shadow);
    }

    .cover-img {
        width: 100%;
        height: 260px;
        object-fit: cover;
        display: block;
    }

    .content-grid {
        display: grid;
        grid-template-columns: 1.1fr 0.9fr;
        gap: 20px;
        margin-top: 20px;
    }

    .left-col, .right-col {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .card {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: var(--radius-md);
        box-shadow: var(--shadow);
        padding: 14px 14px 16px;
    }

    .card-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 8px;
    }

    .card-title {
        margin: 0 0 8px 0;
        font-size: 18px;
    }

    .card-text {
        color: #2a2e35;
        line-height: 1.6;
        font-size: 14.5px;
    }

    .divider {
        height: 1px;
        background: var(--border);
        margin: 10px 0 12px;
    }

    .kv-row {
        display: grid;
        gap: 8px;
    }

    .kv {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .k {
        color: var(--muted);
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .v {
        color: var(--text);
    }

    .link {
        color: var(--primary-700);
        text-decoration: none;
    }

        .link:hover {
            text-decoration: underline;
        }

    .ico {
        width: 18px;
        height: 18px;
        fill: currentColor;
        opacity: 0.8;
    }

    .gm-map {
        width: 100%;
        height: 100%;
        border-radius: 10px;
    }

    .map-container {
        margin-top: 10px;
        width: 100%;
        height: 160px;
        background: linear-gradient(180deg, #f0f3f7, #e7ebf2);
        border: 1px dashed #c7cdda;
        border-radius: var(--radius-sm);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #5b6372;
        font-size: 13px;
    }

    .field {
        display: flex;
        flex-direction: column;
        gap: 6px;
    }

    .label {
        font-size: 13px;
        color: var(--muted);
    }

    .input {
        width: 100%;
        padding: 10px 12px;
        border-radius: 10px;
        border: 1px solid var(--border);
        background: var(--surface);
        font-size: 14px;
        outline: none;
        transition: border .2s ease, box-shadow .2s ease, background .2s ease;
    }

        .input:focus {
            border-color: #bfd3ff;
            box-shadow: 0 0 0 4px rgba(59,130,246,0.12);
            background: #fff;
        }

    .textarea {
        min-height: 110px;
        resize: vertical;
    }

    .filter-grid {
        display: grid;
        grid-template-columns: 1fr 1fr auto;
        gap: 10px;
        align-items: end;
    }

    .field.action {
        align-self: end;
    }

    .table-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .table-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 10px 12px;
        border: 1px solid var(--border);
        border-radius: 10px;
        background: var(--surface);
    }

    .table-name {
        font-weight: 600;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        border: 1px solid transparent;
        border-radius: 10px;
        padding: 10px 14px;
        font-weight: 600;
        cursor: pointer;
        transition: transform .06s ease, box-shadow .2s ease, background .2s ease, border-color .2s ease;
        user-select: none;
    }

        .btn:active {
            transform: translateY(1px);
        }

    .btn-primary {
        background: var(--primary);
        color: #fff;
        box-shadow: 0 6px 16px rgba(59,130,246,0.25);
    }

        .btn-primary:hover {
            background: var(--primary-700);
        }

    .btn-secondary {
        background: var(--secondary);
        color: #fff;
        box-shadow: 0 6px 16px rgba(124,58,237,0.25);
    }

        .btn-secondary:hover {
            filter: brightness(0.95);
        }

    .btn-success {
        background: var(--success);
        color: #fff;
        box-shadow: 0 6px 16px rgba(34,197,94,0.25);
    }

        .btn-success:hover {
            filter: brightness(0.95);
        }

    .btn-soft {
        background: #fff;
        border-color: var(--border);
        color: var(--text);
    }

        .btn-soft:hover {
            background: #f2f5fa;
        }

    .w-100 {
        width: 100%;
    }

    .mt-8 {
        margin-top: 8px;
    }

    @@media (max-width: 980px) {
        .content-grid {
            grid-template-columns: 1fr;
        }

        .filter-grid {
            grid-template-columns: 1fr 1fr;
        }

        .venue-name {
            font-size: 24px;
        }

        .cover-img {
            height: 220px;
        }
    }

    @@media (max-width: 560px) {
        .filter-grid {
            grid-template-columns: 1fr;
        }

        .venue-logo {
            width: 56px;
            height: 56px;
        }

        .venue-name {
            font-size: 22px;
        }

        .cover-img {
            height: 200px;
        }

        .venue-page {
            padding-left: 12px;
            padding-right: 12px;
        }
    }

    .stars {
        display: flex;
        gap: 6px;
        margin-top: 6px;
    }

    .star {
        background: #fff;
        border: 1px solid var(--border);
        color: #c9ccd3;
        border-radius: 8px;
        padding: 4px 8px;
        cursor: pointer;
        transition: filter .2s ease, transform .06s ease, color .2s ease, border-color .2s ease, background .2s ease;
    }

        .star:hover {
            filter: brightness(0.95);
        }

        .star:active {
            transform: translateY(1px);
        }

        .star.active {
            color: #f59e0b;
            border-color: #fcd34d;
            background: #fff7ed;
        }

    /* Latest Reviews list */
    .review-list {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .review-item {
        border: 1px solid var(--border);
        border-radius: 12px;
        background: var(--surface);
        padding: 10px 12px;
    }

    .review-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 8px;
    }

    .review-date {
        color: var(--muted);
        font-size: 13px;
    }

    .star-inline {
        display: inline-block;
        font-size: 16px;
        line-height: 1;
        color: #c9ccd3;
        margin-left: 2px;
    }

        .star-inline.active {
            color: var(--star-gold);
        }

    .review-comment {
        color: var(--text);
        font-size: 14px;
        line-height: 1.5;
        margin-bottom: 6px;
    }

    .review-author {
        color: var(--muted);
        font-size: 13px;
    }
</style>