@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@inject IJSRuntime JSRuntime
@implements IAsyncDisposable

<div id="@MapContainerId" style="width: 100%; height: 100%;"></div>

@code {
    [Parameter] public double Lat { get; set; }
    [Parameter] public double Lng { get; set; }
    [Parameter] public EventCallback<(double lat, double lng)> OnClick { get; set; }

    private string MapContainerId = $"map-picker-{Guid.NewGuid()}";
    private DotNetObjectReference<MapPicker>? dotNetRef;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            string? apiKey = Configuration["GoogleMaps:ApiKey"];

            if (string.IsNullOrEmpty(apiKey))
            {
                Console.WriteLine("[MapPicker] Error: Google Maps API key not found in appsettings.json");
                return;
            }

            try
            {
                dotNetRef = DotNetObjectReference.Create(this);

                await JSRuntime.InvokeVoidAsync(
                    "mapPicker.init",
                    MapContainerId,
                    apiKey,
                    Lat,
                    Lng,
                    dotNetRef
                );
            }
            catch (Exception ex)
            {
                Console.WriteLine($"[MapPicker] Error initializing map: {ex.Message}");
            }
        }
    }

    [JSInvokable]
    public async Task OnMapClick(double lat, double lng)
    {
        if (OnClick.HasDelegate)
        {
            await OnClick.InvokeAsync((lat, lng));
        }
    }

    public async ValueTask DisposeAsync()
    {
        dotNetRef?.Dispose();
        await Task.CompletedTask;
    }
}